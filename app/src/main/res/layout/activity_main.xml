<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mainActivityBackground"
    tools:context="com.fieldarea.whon.fieldarea.MainActivity">

    <Button
        android:id="@+id/openFieldButton"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/newFieldButton"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/newFieldButton"
        android:layout_marginTop="57dp"
        android:background="@drawable/open_field_button"
        android:text="打开土地规划"
        android:textColor="@android:color/background_light" />

    <Button
        android:id="@+id/newFieldButton"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/openFieldButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="31dp"
        android:background="@drawable/new_field_button"
        android:text="新建土地规划"
        android:textColor="@android:color/background_light" />
</RelativeLayout>
