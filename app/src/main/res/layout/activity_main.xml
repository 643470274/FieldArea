<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@color/mainActivityBackground"
    android:gravity="center_horizontal|center_vertical"
    tools:context="com.fieldarea.whon.fieldarea.MainActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/newFieldButton"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/button_main_activity_margin"
            android:background="@drawable/new_field_button"
            android:text="@string/new_field"
            android:textColor="@android:color/background_light" />

        <Button
            android:id="@+id/openFieldButton"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/button_main_activity_margin"
            android:background="@drawable/open_field_button"
            android:text="@string/open_field"
            android:textColor="@android:color/background_light" />

    </LinearLayout>

</RelativeLayout>
